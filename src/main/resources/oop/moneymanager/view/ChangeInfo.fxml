<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@../css/ChangeIf.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.moneymanager.controller.ChangeInformationController">
    <children>
      <Pane layoutY="-1.0" prefHeight="103.0" prefWidth="600.0" style="-fx-background-color: e78300;">
         <children>
              <Label layoutX="14.0" layoutY="30.0" prefHeight="43.0" prefWidth="226.0" styleClass="header-label" text="Edit Information">
                  <font>
                      <Font size="26.0" />
                  </font>
              </Label>
         </children>
      </Pane>
        <GridPane hgap="20" layoutX="73.0" layoutY="150.0" prefHeight="200.0" prefWidth="453.0" styleClass="form-pane" vgap="20">
            <children>

                <Label styleClass="form-label" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="emailField" styleClass="form-textfield" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label styleClass="form-label" text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="phoneField" styleClass="form-textfield" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <HBox alignment="CENTER" layoutX="138.0" layoutY="398.0" prefHeight="43.0" prefWidth="335.0" spacing="20">
            <children>
                <Button fx:id="saveButton" onAction="#handleSaveButton" prefHeight="43.0" prefWidth="107.0" styleClass="action-button" text="Save" />
                <Button fx:id="cancelButton" onAction="#handleCancelButton" prefHeight="43.0" prefWidth="107.0" styleClass="action-button" text="Cancel" />
            </children>
        </HBox>
    </children>
</AnchorPane>
