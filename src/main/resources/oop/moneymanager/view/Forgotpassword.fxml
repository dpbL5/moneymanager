<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.moneymanager.controller.ForgotPassController">
    <children>
        <Label alignment="CENTER" layoutX="210.0" layoutY="44.0" prefHeight="39.0" prefWidth="197.0" text="Forgot Your Password">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label layoutX="132.0" layoutY="100.0" text="Enter your username and email address to retrieve your password" />
        <TextField fx:id="username_field" layoutX="231.0" layoutY="134.0" prefHeight="31.0" prefWidth="229.0" styleClass="textfield-rounded" />
        <TextField fx:id="email_field" layoutX="231.0" layoutY="200.0" prefHeight="31.0" prefWidth="229.0" styleClass="textfield-rounded" />
        <Label alignment="CENTER" layoutX="109.0" layoutY="137.0" text="UserName">
            <font>
                <Font name="System Bold Italic" size="16.0" />
            </font>
        </Label>
        <Label alignment="CENTER" layoutX="109.0" layoutY="200.0" prefHeight="25.0" prefWidth="46.0" text="Email">
            <font>
                <Font name="System Bold Italic" size="16.0" />
            </font>
        </Label>
        <Button layoutX="358.0" layoutY="277.0" mnemonicParsing="false" onAction="#setButtonSubmit" styleClass="custom-button" text="Submit">
            <font>
                <Font name="System Bold" size="18.0" />
            </font></Button>
        <Button layoutX="179.0" layoutY="277.0" mnemonicParsing="false" onAction="#setButtonCancel" styleClass="custom-button" text="Cancel">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
