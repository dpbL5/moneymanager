<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.moneymanager.controller.ForgotPassController">
    <children>
        <Label layoutX="97.0" layoutY="99.0" text="Enter your username and email address to retrieve your password">
         <font>
            <Font size="14.0" />
         </font></Label>
        <TextField fx:id="username_field" layoutX="115.0" layoutY="168.0" prefHeight="31.0" prefWidth="367.0" styleClass="textfield-rounded" />
        <TextField fx:id="email_field" layoutX="115.0" layoutY="253.0" prefHeight="31.0" prefWidth="367.0" styleClass="textfield-rounded" />
        <Label alignment="CENTER" layoutX="116.0" layoutY="142.0" text="UserName">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <Label alignment="CENTER" layoutX="116.0" layoutY="227.0" prefHeight="25.0" prefWidth="46.0" text="Email">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <Button layoutX="139.0" layoutY="317.0" mnemonicParsing="false" onAction="#setButtonSubmit" prefHeight="40.0" prefWidth="141.0" style="-fx-background-color: #e78300;" styleClass="custom-button" text="Submit" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font></Button>
        <Button layoutX="319.0" layoutY="317.0" mnemonicParsing="false" onAction="#setButtonCancel" prefHeight="40.0" prefWidth="142.0" style="-fx-background-color: #e78300;" styleClass="custom-button" text="Cancel" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
      <AnchorPane prefHeight="69.0" prefWidth="600.0" style="-fx-background-color: #e78300;">
         <children>
              <Label alignment="CENTER" layoutX="25.0" layoutY="15.0" prefHeight="39.0" prefWidth="197.0" text="Forgot Your Password" textFill="WHITE">
                  <font>
                      <Font name="System Bold" size="18.0" />
                  </font>
              </Label>
         </children>
      </AnchorPane>
    </children>
</AnchorPane>
